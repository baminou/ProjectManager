package app;

import java.io.File;
import java.io.IOException;
import java.io.InputStream;
import java.rmi.RemoteException;
import java.rmi.server.UnicastRemoteObject;
import java.util.Properties;


public class ProjectManagerImplementation implements ProjectManagerInterface {

	public ProjectManagerImplementation() throws RemoteException {
		super();
	}

	@Override
	public String getScratchDirectory() throws RemoteException, IOException {
		Properties prop = new Properties();
		InputStream input = getClass().getClassLoader().getResourceAsStream("config.properties");
		prop.load(input);
		return prop.getProperty("scratch_directory");
	}

	@Override
	public String getArchiveDirectory() throws RemoteException, IOException {
		Properties prop = new Properties();
		InputStream input = getClass().getClassLoader().getResourceAsStream("config.properties");
		prop.load(input);
		return prop.getProperty("archive_directory");
	}

	@Override
	public String getScratchTreeStructure() throws RemoteException {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public String getArchiveTreeStructure() throws RemoteException {
		// TODO Auto-generated method stub
		return null;
	}

}
