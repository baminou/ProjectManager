package model;

import java.io.IOException;
import java.rmi.NotBoundException;
import java.rmi.RemoteException;

import app.ConventionException;
import app.Project;
import epi.ServerInterface;

public class CreateProjectModel {
	
	private static CreateProjectModel instance = null;
	
	private CreateProjectModel(){
		
	}
	
	public static CreateProjectModel getInstance(){
		if(instance == null){
			instance = new CreateProjectModel();
		}
		return instance;
	}
	
	/**
	 * Send a project to the server
	 * @param project	The project to send
	 * @throws NotBoundException 
	 * @throws IOException 
	 * @throws ConventionException 
	 * @throws RemoteException 
	 * @throws Exception	The project cannot be created on the server.
	 */
	public void create_project(Project project) throws RemoteException, ConventionException, IOException, NotBoundException{
		ServerInterface.getInstance().get_stub().createProjectFolder(project);
	}

}
