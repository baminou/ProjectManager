package app;

import java.io.File;
import java.util.ArrayList;
import java.util.List;

public class Tree<File> {
	
	private Node<File> root;
	
	public Tree(File rootFile){
		root = new Node<File>(rootFile);
		root.children = new ArrayList<Node<File>>();
	}
	
	public Node<File> getRoot() {
		return root;
	}
	
	public void setRoot(Node<File> root) {
		this.root = root;
	}
	
	
	public static class Node<File> {
		private File data;
		private Node<File> parent;
		private List<Node<File>> children;
		
		public Node(File data) {
			super();
			this.data = data;
		}
		public File getData() {
			return data;
		}
		public void setData(File data) {
			this.data = data;
		}
		public Node<File> getParent() {
			return parent;
		}
		public void setParent(Node<File> parent) {
			this.parent = parent;
		}
		public List<Node<File>> getChildren() {
			return children;
		}
		public void setChildren(List<Node<File>> children) {
			this.children = children;
		}
		
		
	}

}
