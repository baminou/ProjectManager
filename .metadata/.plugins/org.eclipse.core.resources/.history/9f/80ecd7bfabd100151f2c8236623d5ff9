package model;

import java.io.File;

import epi.Project;

public class CreateProjectModel {
	
	private static CreateProjectModel instance = null;
	
	private CreateProjectModel(){
		
	}
	
	public static CreateProjectModel getInstance(){
		if(instance == null){
			instance = new CreateProjectModel();
		}
		return instance;
	}
	
	public void create_project(File path) throws Exception{
		if(path.exists()) throw new Exception("Folder already exists!");
		path.mkdirs();
	}

}
