package view;

import javax.swing.JPanel;

import com.jgoodies.forms.layout.FormLayout;
import com.jgoodies.forms.layout.ColumnSpec;
import com.jgoodies.forms.layout.RowSpec;
import com.jgoodies.forms.factories.FormFactory;

import javax.swing.JLabel;
import javax.swing.JPasswordField;
import javax.swing.JTextField;
import java.awt.Font;

public class ServerView extends JPanel {
	final private JTextField _ipTxtField = new JTextField();
	final private JLabel _ipLbl = new JLabel("IP:");
	private JLabel _scratchLbl;
	private JLabel _archiveLbl;
	private JTextField _archiveTxtField = new JTextField();
	private JTextField _scratchTxtField;
	private JLabel _portLbl;
	private JLabel _portTxtField;
	
	public ServerView() {
		setLayout(new FormLayout(new ColumnSpec[] {
				FormFactory.RELATED_GAP_COLSPEC,
				FormFactory.DEFAULT_COLSPEC,
				FormFactory.RELATED_GAP_COLSPEC,
				ColumnSpec.decode("default:grow"),},
			new RowSpec[] {
				FormFactory.RELATED_GAP_ROWSPEC,
				FormFactory.DEFAULT_ROWSPEC,
				FormFactory.RELATED_GAP_ROWSPEC,
				FormFactory.DEFAULT_ROWSPEC,
				FormFactory.RELATED_GAP_ROWSPEC,
				FormFactory.DEFAULT_ROWSPEC,
				FormFactory.RELATED_GAP_ROWSPEC,
				FormFactory.DEFAULT_ROWSPEC,}));
		_ipLbl.setFont(new Font("Arial", Font.PLAIN, 12));
		
		add(_ipLbl, "2, 2, right, default");
		_ipTxtField.setFont(new Font("Arial", Font.PLAIN, 12));
		_ipTxtField.setEditable(false);
		add(_ipTxtField, "4, 2, left, default");
		
		_portLbl = new JLabel("Port:");
		_portLbl.setFont(new Font("Arial", Font.PLAIN, 12));
		add(_portLbl, "2, 4, right, default");
		
		_portTxtField = new JLabel();
		_portTxtField.setFont(new Font("Arial", Font.PLAIN, 12));
		add(_portTxtField, "4, 4, left, default");
		_scratchLbl = new JLabel("Scratch:");
		_scratchLbl.setFont(new Font("Arial", Font.PLAIN, 12));
		add(_scratchLbl, "2, 6, right, default");
		
		_scratchTxtField = new JLabel();
		_scratchTxtField.setFont(new Font("Arial", Font.PLAIN, 12));
		add(_scratchTxtField, "4, 6, left, default");
		
		_archiveLbl = new JLabel("Archive:");
		_archiveLbl.setFont(new Font("Arial", Font.PLAIN, 12));
		add(_archiveLbl, "2, 8, right, default");
		
		_archiveTxtField = new JLabel();
		_archiveTxtField.setFont(new Font("Arial", Font.PLAIN, 12));
		add(_archiveTxtField, "4, 8, left, default");

	}

	public JLabel get_scratchLbl() {
		return _scratchLbl;
	}

	public void set_scratchLbl(JLabel _scratchLbl) {
		this._scratchLbl = _scratchLbl;
	}

	public JLabel get_archiveLbl() {
		return _archiveLbl;
	}

	public void set_archiveLbl(JLabel _archiveLbl) {
		this._archiveLbl = _archiveLbl;
	}

	public JLabel get_portLbl() {
		return _portLbl;
	}

	public void set_portLbl(JLabel _portLbl) {
		this._portLbl = _portLbl;
	}
	
	public JLabel get_archiveTxtField() {
		return _archiveTxtField;
	}

	public void set_archiveTxtField(JLabel _archiveTxtField) {
		this._archiveTxtField = _archiveTxtField;
	}

	public JLabel get_scratchTxtField() {
		return _scratchTxtField;
	}

	public void set_scratchTxtField(JLabel _scratchTxtField) {
		this._scratchTxtField = _scratchTxtField;
	}

	public JLabel get_portTxtField() {
		return _portTxtField;
	}

	public void set_portTxtField(JLabel _portTxtField) {
		this._portTxtField = _portTxtField;
	}

	public JLabel get_ipLbl() {
		return _ipLbl;
	}

}
