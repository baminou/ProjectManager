	}

	@Override
	public void createPCRDirectory(String parent_path, PCR pcr) {
		String folder_name = get_folder_name(pcr.get_title(),pcr.get_species(),pcr.get_description(),pcr.get_project(),parent_path)+"/";
		createScratchDirectory(folder_name);
		
		Workbook template = Workbook.getWorkbook(getClass().getClassLoader().getResourceAsStream("PCR_template.xls"));
		WritableWorkbook wbCopy = Workbook.createWorkbook(new File(getScratchPath()+"/"+folder_name+"metadata.xls"),template);
		
		WritableSheet sheet = wbCopy.getSheet("TEMPLATE");
		
		sheet.addCell(new Label(1,10,title));
		sheet.addCell(new Label(1,11,summary));
		sheet.addCell(new Label(1,13,overall_design));
		sheet.addCell(new Label(1,14,contributor));
				
		sheet.addCell(new Label(1,30,growth_protocol));
		sheet.addCell(new Label(1,31,treatment_protocol));
		sheet.addCell(new Label(1,32,extract_protocol));
		sheet.addCell(new Label(1,33,label_protocol));
		sheet.addCell(new Label(1,36,data_processing));
		sheet.addCell(new Label(1,37,value_definition));
		wbCopy.write();
		wbCopy.close();
	}


